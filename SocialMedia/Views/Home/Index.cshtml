@{
    ViewData["Title"] = "Posts";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Lato', sans-serif;
    }

    h2 {
        text-align: center;
        margin: 20px 0;
        color: #007bff;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
        min-height: 400px;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
        transition: background-color 0.3s ease;
    }

    .username, .title, .content, .post-date {
        width: auto;
        max-width: 150px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .content {
        max-width: 300px;
    }

    .pagination {
        display: flex;
        justify-content: center;
        list-style: none;
        padding: 0;
        margin-bottom: 20px;
    }

    .page-item {
        margin: 0 5px;
    }

    .page-link {
        padding: 8px 16px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        border-radius: 15px !important;
    }

        .page-item.active .page-link,
        .page-link:hover {
            background-color: #0056b3;
        }

    table tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
    }

    .table th.username {
        width: 10%;
    }

    .table th.title {
        width: 20%;
    }

    .table th.content {
        width: 50%;
    }

    .table th.post-date {
        width: 30%;
    }
</style>

<div class="container">
    <h2>All Posts</h2>
    <table class="table" id="postTable">
        <thead>
            <tr>
                <th scope="col" class="username">Username</th>
                <th scope="col" class="title">Title</th>
                <th scope="col" class="content">Content</th>
                <th scope="col" class="post-date">Post Date</th>
            </tr>
        </thead>
        <tbody id="postBody">
            <!-- Posts will be dynamically added here using JavaScript -->
        </tbody>
    </table>

    <!-- Pagination Section -->
    <nav>
        <ul class="pagination" id="pagination">
            <!-- Pagination links will be dynamically added here using JavaScript -->
        </ul>
    </nav>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            let currentRequest;

            function disablePagination() {
                $('#pagination').off('click', '.page-link');
            }

            function enablePagination() {
                $('#pagination').on('click', '.page-link', function (e) {
                    e.preventDefault();
                    const currentPage = $(this).data('current-page');
                    getAllPosts(currentPage);
                });
            }

            function getAllPosts(currentPage) {
                disablePagination();

                if (currentRequest) {
                    currentRequest.abort();
                }

                currentRequest = $.get('/Post/GetAllPosts', { currentPage }, function (data) {
                    $('#postBody').empty();
                    $('#pagination').empty();

                    data.posts.forEach(post => {
                        const row = `
                                    <tr onclick="window.location.href='/Post/DetailPost?postId=${post.postId}';" style="cursor:pointer;">
                                        <td class="username">${post.user ? post.user.username : 'Deleted User'}</td>
                                        <td class="title">${post.title}</td>
                                        <td class="content">${post.content}</td>
                                        <td class="post-date">${new Date(post.postDate).toLocaleString()}</td>
                                    </tr>`;
                        $('#postBody').append(row);
                    });

                    for (let i = 1; i <= data.totalPages; i++) {
                        const liClass = i === data.currentPage ? 'page-item active' : 'page-item';
                        const button = `<button class="page-link" data-current-page="${i}">${i}</button>`;
                        const li = `<li class="${liClass}">${button}</li>`;
                        $('#pagination').append(li);
                    }

                    enablePagination();
                })
                    .fail(function (error) {
                        console.log(error);
                    })
                    .always(function () {
                        enablePagination();
                        currentRequest = null;
                    });
            }

            getAllPosts(1);
        });
    </script>
}

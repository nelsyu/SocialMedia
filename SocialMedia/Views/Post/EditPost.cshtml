@model Service.ViewModels.PostViewModel

<h2>Edit Post</h2>

<form asp-action="EditPost" method="post">
    <input type="hidden" name="postId" value="@Model.PostId" />

    <div class="form-group">
        <label asp-for="TopicId">Topic:</label>
        @if (Model.TopicViewModels != null)
        {
            <select asp-for="TopicId" asp-items="@(new SelectList(Model.TopicViewModels, "TopicId", "Title"))" class="form-control">
                <option value=""></option>
            </select>
        }
        else
        {
            <p>No Topics available.</p>
        }
    </div>
    <div class="form-group">
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" value="@Model.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Content">Content:</label>
        <textarea asp-for="Content" class="form-control">@Model.Content</textarea>
    </div>

    <div class="form-group">
        <label asp-for="LastEditDate">Last Edit Date:</label>
        <input asp-for="LastEditDate" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Confirm</button>
</form>

@{
    ViewData["Title"] = "DetailPost";
}
@using Service.ViewModels
@model (PostViewModel PostVM, ReplyViewModel ReplyVM)
@using Library.Extensions

<style>
    /* 共用樣式 */
    .rounded {
        border-radius: 15px;
    }

    /* 卡片樣式 */
    .card {
        border: none;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 15px;
    }

    .card-header {
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 15px 15px 15px 15px;
        padding: 15px;
    }

    .card-footer {
        background-color: #dddddd;
        color: #000000;
        border: none;
        border-radius: 15px 15px 15px 15px;
        padding: 15px;
    }

    .card-body, .card-footer, .table td, .table th {
        border: none;
        padding: 15px;
    }

    /* 表格樣式 */
    .table {
        border: none;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 15px;
    }

        .table thead th {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 15px 15px 15px 15px;
            padding: 15px;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

    .btn {
        border-radius: 15px;
        border: none;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-primary:hover {
        background-color: #007bff;
    }

    /* 表單樣式 */
    .form-group label {
        font-weight: bold;
        color: #007bff;
    }

    .form-control {
        border: 2px solid #007bff;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 10px;
    }

    .scrollable-section {
        max-height: 400px;
        overflow-y: auto;
    }

</style>

<div class="container mt-4">
    <!-- 主卡片 -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">@Model.PostVM.Title</h5>
        </div>
        <div class="card-body">
            <p class="card-text">@Model.PostVM.Content</p>
        </div>
        <div class="card-footer">
            <span class="username">@Model.PostVM.User?.Username</span>
            <span class="post-date">@Model.PostVM.PostDate.ToString("yyyy-MM-dd HH:mm:ss")</span>
            <div class="float-end">
                @if (!string.IsNullOrEmpty(TempData[ParameterKeys.LoggedInUsername]?.ToString()) && Model.PostVM.User?.Username == TempData[ParameterKeys.LoggedInUsername]?.ToString())
                {
                    <a class="btn btn-danger btn-rounded" href="@Url.Action("EditPost", "Post", new { postId = Model.PostVM.PostId })">Edit</a>
                }
            </div>
        </div>
    </div>

    <!-- 回覆表單觸發按鈕 -->
    <button type="button" class="btn btn-primary btn-rounded mt-4" data-bs-toggle="modal" data-bs-target="#replyModal">
        Reply
    </button>

    <!-- 回覆表單 Modal -->
    <div class="modal fade" id="replyModal" tabindex="-1" aria-labelledby="replyModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="replyModalLabel">Add Reply</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form method="post" asp-controller="Post" asp-action="AddReply" onsubmit="return checkLogin();">
                    <div class="modal-body">
                        <input type="hidden" name="PostId" value="@Model.PostVM.PostId" />
                        <div class="form-group">
                            <textarea class="form-control" id="replyContent" name="Content" rows="3" placeholder="Type your reply here..." required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary btn-rounded">Submit Reply</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- 回覆區域 -->
    <div id="replies-section" class="mt-4">
        <h3>Replies</h3>
        <div class="scrollable-section">
            @foreach (var reply in Model.PostVM.Replies.OrderByDescending(rVM => rVM.ReplyDate))
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <span class="username">@(reply.User?.Username ?? "已刪除用戶")</span>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@reply.Content</p>
                    </div>
                    <div class="card-footer">
                        <span class="reply-date">@reply.ReplyDate.ToString("yyyy-MM-dd HH:mm:ss")</span>
                    </div>
                </div>
            }
        </div>
    </div>

    <script>
        function checkLogin() {
            $.ajax({
                url: '@Url.Action("IsLoggedIn", "User")',
                success: function (data) {
                    if (!data) {
                        alert("Please log in to your account first.");
                    }
                },
                error: function (error) {
                    console.error('Error checking login status:', error);
                }
            });
        }
    </script>
</div>

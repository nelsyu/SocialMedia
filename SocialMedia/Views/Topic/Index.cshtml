@{
    ViewData["Title"] = "Topics";
}
@using Service.ViewModels
@model List<TopicViewModel>

<style>
    .btn-3d {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        transition: 0.3s;
    }

        .btn-3d:hover {
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.2);
        }

    .btn {
        border-radius: 15px;
    }
</style>

<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">Explore Topics</h2>

    <div class="row row-cols-6 row-cols-md-6 row-cols-lg-6 g-2">
        @foreach (var topicVM in Model)
        {
            <div class="col mb-3">
                <div class="position-relative">
                    <button class="btn btn-primary btn-lg custom-style w-100 btn-3d btn-rounded" onclick="location.href='@Url.Action("DetailTopic", "Topic", new { topicId = topicVM.TopicId })'">@topicVM.Title</button>
                    <button class="btn btn-danger btn-sm position-absolute top-0 end-0 m-2"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteTopicModal_@topicVM.TopicId"
                            onclick="event.stopPropagation();">
                        -
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="deleteTopicModal_@topicVM.TopicId" tabindex="-1" aria-labelledby="deleteTopicModalLabel_@topicVM.TopicId" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteTopicModalLabel_@topicVM.TopicId">Confirm Delete Topic</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this topic? This action cannot be undone.</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="event.stopPropagation();">
                                        Cancel
                                    </button>
                                    <form class="delete-form" method="post" asp-controller="topic" asp-action="Deletetopic">
                                        <input type="hidden" name="topicId" value="@topicVM.TopicId" />
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-4">
        <form method="post" action="@Url.Action("CreateTopic", "Topic")">
            <div class="form-group mb-4">
                <label for="title" class="form-label h4">Create a New Topic:</label>
                <input type="text" id="title" name="title" class="form-control input-rounded" placeholder="Share your thoughts..." required>
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-3d btn-rounded">Submit</button>
        </form>
    </div>
</div>

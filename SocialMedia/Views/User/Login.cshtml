@{
    ViewData["Title"] = "Login";
}
@model Service.ViewModels.UserViewModel

<style>
    .card {
        border: none;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-radius: 15px 15px 15px 15px;
    }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 15px 15px 15px 15px;
    }

    .captcha-image {
        border-radius: 30px 30px 30px 30px;
    }

    .btn {
        border-radius: 15px 15px 15px 15px;
        border: none;
    }

    .btn-secondary {
        background-color: orange;
    }

        .btn-secondary:hover {
            background-color: darkorange;
        }

</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <h2 class="card-header text-center bg-primary text-white">Login</h2>

                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmCaptcha" class="form-label">Confirm Captcha</label>

                            <div class="input-group">
                                <input asp-for="ConfirmCaptcha" class="form-control" />
                                <img src="data:image/png;base64,@Convert.ToBase64String(Model.CaptchaImage)" alt="Captcha Image" class="captcha-image rounded" style="max-width: 100px; height: auto;" />
                            </div>
                            <span asp-validation-for="ConfirmCaptcha" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary btn-block mb-3">Login</button>
                            <button type="button" class="btn btn-secondary btn-block mb-3" id="btnRefreshCaptcha">Refresh Captcha</button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <p class="mb-0">Don't have an account? <a asp-action="Register" asp-controller="User">Register here</a>.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $("#btnRefreshCaptcha").on("click", function () {
                $.ajax({
                    url: '/User/RefreshCaptcha',
                    method: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        $('.captcha-image').attr('src', "data:image/png;base64," + data.image);
                        $('[name="ConfirmCaptcha"]').val("");
                    },
                    error: function (error) {
                        console.error('Error refreshing captcha:', error);
                    }
                });
            });
        });
    </script>
}
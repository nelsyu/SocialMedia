@{
    Layout = "_Layout";
}
@using Library.Constants
@using Library.Models
@using Library.Extensions
@inject IHttpContextAccessor httpContextAccessor
@{
    HttpContext _httpContext = httpContextAccessor.HttpContext!;
    if (_httpContext!.User.Identity!.IsAuthenticated)
        TempData[ParameterKeys.UsernameLoggedIn] = _httpContext.User.FindFirst(ParameterKeys.UsernameLoggedIn)!.Value;
}